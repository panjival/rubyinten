<h1>DAFTAR MURID</h1>
<div class="pull-right">
<%= link_to 'ADD MURID', muridsnew_path, class: 'btn btn-primary', role: 'button' %>
</div>
<div class="container">
<div class="table-responsive-sm">
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">NO</th>
      <th scope="col">NAMA</th>
      <th scope="col">JENIS KELAMIN</th>
      <th scope="col">TEMPAT LAHIR</th>
      <th scope="col">TANGGAL LAHIR</th>
      <th scope="col">ALAMAT</th>
      <th scope="col">NOMOR TELPON</th>
    </tr>
  </thead>
  <tbody>
  <% @murids.each_with_index do |f,index| %>
    <tr>
        <th scope="row"><%= index +1 %></th>
        <td><%= f.nama %></td>
        <td><%= f.jenis_kelamin==1 ? 'Laki-laki' : 'Perempuan' %></td>
        <td><%= f.tmp_lahir %></td>
        <td><%= f.tgl_lahir %></td>
        <td><%= f.alamat %></td>
        <td><%= f.no_tlp %></td> 
        <td><%= link_to 'edit', murid_path(f), class:'btn btn-warning' %></td>
        <td><%= link_to 'delete', f , method: :delete, class:'btn btn-danger' %></td>
    </tr>
<% end %>
  </tbody>
</table>
</div>
</div>

